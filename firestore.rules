/**
 * @fileoverview Firestore Security Rules for Collaborative Vocabulary Learning App
 *
 * Core Philosophy:
 * This ruleset enforces a hybrid security model. User-owned data (profiles, personal vocab)
 * is strictly controlled using path-based ownership. Collaborative session data has nuanced
 * access control based on session visibility (public vs. private) and the host user.
 * Public sessions are readable by anyone, but only modifiable by the host. Private sessions
 * are managed under the host's user path.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only by the user.
 * - /users/{userId}/personalVocabulary/{personalVocabularyId}: User's personal vocabulary, only accessible by the user.
 * - /users/{userId}/sessions/{sessionId}: Private sessions created by the user.
 * - /public_sessions/{sessionId}: Public sessions, readable by all, writable only by the session host.
 * - /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}: Vocabulary cards within a session, accessible based on session permissions.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Public sessions are stored in a separate top-level collection to enable public read access while maintaining owner control.
 * - Write access to public sessions is restricted to the session host.
 *
 * Denormalization for Authorization:
 * - Public sessions denormalize the `hostId` to allow for efficient write access checks without extra reads.
 *
 * Structural Segregation:
 * - Public and private sessions are stored in separate collections to simplify list operations and enforce different access controls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the requesting user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource and the resource exists.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rule for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates a profile with id: 'user123'.
     * @deny (create) User with ID 'user456' attempts to create a profile with id: 'user123'.
     * @allow (get) User with ID 'user123' reads their own profile.
     * @deny (get) User with ID 'user456' attempts to read the profile of user 'user123'.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/personalVocabulary/{personalVocabularyId} collection.
     * @path /users/{userId}/personalVocabulary/{personalVocabularyId}
     * @allow (create) User with ID 'user123' creates a vocabulary card in their personal collection.
     * @deny (create) User with ID 'user456' attempts to create a vocabulary card in user 'user123's personal collection.
     * @allow (get) User with ID 'user123' reads a vocabulary card from their personal collection.
     * @deny (get) User with ID 'user456' attempts to read a vocabulary card from user 'user123's personal collection.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/personalVocabulary/{personalVocabularyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /users/{userId}/sessions/{sessionId} collection.
     * @path /users/{userId}/sessions/{sessionId}
     * @allow (create) User with ID 'user123' creates a session.
     * @deny (create) User with ID 'user456' attempts to create a session for user 'user123'.
     * @allow (get) User with ID 'user123' reads their own session.
     * @deny (get) User with ID 'user456' attempts to read a session owned by user 'user123'.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/sessions/{sessionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.hostId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.hostId == resource.data.hostId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rule for the /public_sessions/{sessionId} collection.
     * @path /public_sessions/{sessionId}
     * @allow (get) Any user can read a public session.
     * @allow (list) Any user can list public sessions.
     * @allow (create) User with ID 'user123' creates a public session with hostId 'user123'.
     * @deny (create) User with ID 'user456' attempts to create a public session with hostId 'user123'.
     * @allow (update) User with ID 'user123' updates a public session they own (hostId is 'user123').
     * @deny (update) User with ID 'user456' attempts to update a public session owned by user 'user123'.
     * @principle Allows public read access but enforces ownership for writes to public sessions.
     */
    match /public_sessions/{sessionId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid && request.resource.data.visibility == 'public';
      allow update: if isExistingOwner(resource.data.hostId) && request.resource.data.hostId == resource.data.hostId && request.resource.data.visibility == 'public';
      allow delete: if isExistingOwner(resource.data.hostId);
    }

    /**
     * @description Rule for the /sessions/{sessionId}/vocabularyCards/{vocabularyCardId} collection.
     * @path /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}
     * @allow (create) Any signed-in user can create a vocabulary card in a session.
     * @deny (create) An unsigned-in user attempts to create a vocabulary card.
     * @allow (get) Any signed-in user can read a vocabulary card in a session.
     * @deny (update) An unsigned-in user attempts to update a vocabulary card.
     * @principle Allows access based on user authentication.
     */
    match /sessions/{sessionId}/vocabularyCards/{vocabularyCardId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.sessionId == sessionId && request.resource.data.creatorId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.sessionId == sessionId && request.resource.data.creatorId == resource.data.creatorId;
      allow delete: if isSignedIn() && request.resource.data.sessionId == sessionId && request.resource.data.creatorId == resource.data.creatorId;
    }
  }
}