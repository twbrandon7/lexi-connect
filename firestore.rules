/**
 * @fileoverview Firestore Security Rules for the collaborative vocabulary learning app.
 *
 * Core Philosophy:
 * This ruleset enforces a combination of path-based ownership for user data and attribute-based access control for sessions.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the owning user.
 * - /users/{userId}/personalVocabulary/{personalVocabularyId}: Stores a user's personal vocabulary, accessible only to the owning user.
 * - /sessions/{sessionId}: Stores session data. Read access is public. Write access is restricted to the host of the session.
 * - /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}: Stores vocabulary cards within a session. Write access is restricted to the host of the session.
 *
 * Key Security Decisions:
 * - Users can only access their own data under the /users/{userId} path.
 * - Sessions are publicly readable, but only the host can modify them.
 * - Listing of the `sessions` collection is allowed for all users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (get, create, update, delete, list) if the user's ID matches the requested userId.
     * @deny (create, update, delete) if the user's ID does not match the requested userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Read Permissions
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not permitted

      // Write Permissions
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to a user's personal vocabulary.
     * @path /users/{userId}/personalVocabulary/{personalVocabularyId}
     * @allow (get, create, update, delete, list) if the user's ID matches the requested userId.
     * @deny (create, update, delete) if the user's ID does not match the requested userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/personalVocabulary/{personalVocabularyId} {
      // Read Permissions
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);

      // Write Permissions
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to sessions. All users can read session data, but only the host can modify it.
     * @path /sessions/{sessionId}
     * @allow (get, list) to all users.
     * @allow (create) to the user if they are creating session document, the session document is created with hostId = request.auth.uid.
     * @allow (update, delete) to the user if they are the host of the session.
     * @deny (update, delete) if the user is not the host of the session.
     * @principle Allows public read access with owner-only writes.
     */
    match /sessions/{sessionId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
      allow update: if isSignedIn() && isExistingSessionHost(resource.data.hostId);
      allow delete: if isSignedIn() && isExistingSessionHost(resource.data.hostId);
    }

    /**
     * @description Controls access to vocabulary cards within a session.
     * @path /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}
     * @allow (get, list) to all users.
     * @allow (create) to the user if they are the host of the session.
     * @allow (update, delete) to the user if they are the host of the session.
     * @deny (update, delete) if the user is not the host of the session.
     * @principle Allows owner-only writes for vocabulary cards within a public session.
     */
    match /sessions/{sessionId}/vocabularyCards/{vocabularyCardId} {
      // Read Permissions
      allow get: if true;
      allow list: if true;

      // Write Permissions
      allow create: if isSignedIn() && isSessionHost(sessionId, request.auth.uid);
      allow update: if isSignedIn() && isExistingSessionHost(getSessionIdFromVocabularyCard(resource.data.sessionId));
      allow delete: if isSignedIn() && isExistingSessionHost(getSessionIdFromVocabularyCard(resource.data.sessionId));
    }

    //---------------- Helper functions -----------------------

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document based on the userId.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of an existing document based on the userId and that the document exists.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user is the host of the session based on the hostId.
     * @param {string} hostId - The host ID to compare against the request's authentication UID.
     * @return {boolean} True if the user is the host, false otherwise.
     */
    function isSessionHost(sessionId, hostId) {
        return get(/databases/$(database)/documents/sessions/$(sessionId)).data.hostId == hostId;
    }

    /**
     * @description Checks if the user is the host of an existing session based on the hostId and that the document exists.
     * @param {string} hostId - The host ID to compare against the request's authentication UID.
     * @return {boolean} True if the user is the host and the document exists, false otherwise.
     */
    function isExistingSessionHost(hostId) {
      return isSignedIn() && request.auth.uid == hostId && resource != null;
    }

      /**
       * @description Retrieves the sessionId from a vocabularyCard document's data.
       * @param {string} vocabularyCardSessionId - The ID of the session to which the vocabulary card belongs.
       * @return {string} The session ID.
       */
    function getSessionIdFromVocabularyCard(vocabularyCardSessionId) {
      return vocabularyCardSessionId;
    }
  }
}