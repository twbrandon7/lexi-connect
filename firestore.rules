/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for personal data and a shared-access model for collaborative sessions.
 *
 * Data Structure:
 * - User profiles are stored under `/users/{userId}`.
 * - A user's personal vocabulary is stored under `/users/{userId}/personalVocabulary/{personalVocabularyId}`.
 * - Private sessions created by a user are stored under `/users/{userId}/sessions/{sessionId}`.
 * - Public sessions are stored under `/public_sessions/{sessionId}`.
 * - Vocabulary cards within a session are stored under `/sessions/{sessionId}/vocabularyCards/{vocabularyCardId}`.
 *
 * Key Security Decisions:
 * - Users can only access their own profiles and personal vocabulary.
 * - Public sessions are readable by anyone.
 * - Only the host of a session can modify it.
 * - Listing of user documents is disallowed for privacy.
 *
 * Denormalization for Authorization:
 * - Public sessions in `/public_sessions` include a denormalized `hostId` field to simplify ownership checks for updates and deletes.
 *
 * Structural Segregation:
 * - Public sessions are stored in `/public_sessions`, while private sessions are stored under each user's profile, enabling secure list operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own profile with matching userId.
     * @allow (get, update, delete) - Authenticated user reads/updates/deletes their own profile.
     * @deny (create, get, update, delete) - Any operation where the userId does not match the authenticated user.
     * @deny (list) - Listing users is not allowed.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows users to manage their personal vocabulary.
     * @path /users/{userId}/personalVocabulary/{personalVocabularyId}
     * @allow (create, get, update, delete, list) - Authenticated user manages their own personal vocabulary.
     * @deny (create, get, update, delete, list) - Any operation where the userId does not match the authenticated user.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/personalVocabulary/{personalVocabularyId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows users to manage their private sessions.
     * @path /users/{userId}/sessions/{sessionId}
     * @allow (create, get, update, delete, list) - Authenticated user manages their own private sessions.
     * @deny (create, get, update, delete, list) - Any operation where the userId does not match the authenticated user.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/sessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows anyone to read public sessions, but only the host can modify them.
     * @path /public_sessions/{sessionId}
     * @allow (get, list) - Any user can read/list public sessions.
     * @allow (create) - Only the session creator can create a public session, and must set the correct `hostId`.
     * @allow (update, delete) - Only the session host can update/delete a public session.
     * @deny (create, update, delete) - Operations where the user is not the session host.
     * @principle Allows public read access with owner-only writes and validates relational integrity.
     */
    match /public_sessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(hostId) {
        return request.auth.uid == hostId;
      }

      function isHost() {
          return isSignedIn() && request.auth.uid == request.resource.data.hostId;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && isHost();
      allow update: if isSignedIn() && isHost();
      allow delete: if isSignedIn() && isHost();
    }

    /**
     * @description Allows vocabulary cards to be managed within a session.
     * @path /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}
     * @allow (create) - Any authenticated user can create a vocabulary card.
     * @allow (get, list) - Any authenticated user can read/list vocabulary cards in a session.
     * @allow (update, delete) - Only the creator or host can update/delete vocabulary cards.
     * @principle Enforces access control based on session membership and creator/host roles.
     */
    match /sessions/{sessionId}/vocabularyCards/{vocabularyCardId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}