/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and personal vocabulary,
 * and a public-read, owner-write model for sessions. All user-specific data is nested under /users/{userId}.
 * Sessions are stored in a top-level /sessions collection, with access controlled by the `visibility` field.
 *
 * Data Structure:
 * - /users/{userId}: User profiles. Only the authenticated user can access their own profile.
 * - /users/{userId}/personalVocabulary/{personalVocabularyId}: User's personal vocabulary. Only the user can manage their own vocabulary.
 * - /sessions/{sessionId}: Learning sessions. Publicly readable, but only the session host can modify them.
 * - /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}: Vocabulary cards within a session. Only the card creator or the session host can modify them.
 *
 * Key Security Decisions:
 * - Users can only list their own personal vocabulary cards.
 * - Sessions are publicly readable, but only the host can modify them.
 * - Vocabulary cards can only be created, updated, or deleted by the creator or the session host.
 * - No global admin roles are defined.
 *
 * Denormalization for Authorization:
 * - Sessions contain a `hostId` field to simplify ownership checks.
 * - Vocabulary cards contain a `creatorId` field to simplify ownership checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) Authenticated user creates their own profile.
     * @allow (get, update, delete) Authenticated user reads, updates, or deletes their own profile.
     * @deny (create) User attempts to create a profile with a different user ID.
     * @deny (get, update, delete) User attempts to read, update, or delete another user's profile.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for personal vocabulary cards.
     * @path /users/{userId}/personalVocabulary/{personalVocabularyId}
     * @allow (create) Authenticated user creates a personal vocabulary card under their own profile.
     * @allow (get, list, update, delete) Authenticated user reads, lists, updates, or deletes their own personal vocabulary cards.
     * @deny (create) User attempts to create a personal vocabulary card under a different user ID.
     * @deny (get, list, update, delete) User attempts to read, list, update, or delete another user's personal vocabulary cards.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/personalVocabulary/{personalVocabularyId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to sessions, but restricts writes to the session host.
     * @path /sessions/{sessionId}
     * @allow (get, list) Any user can read sessions.
     * @allow (create) Authenticated user creates a session with their user ID as the hostId.
     * @allow (update, delete) Only the session host can update or delete the session.
     * @deny (create) User attempts to create a session with a different user ID as the hostId.
     * @deny (update, delete) User attempts to update or delete a session they do not host.
     * @principle Allows public read access while enforcing document ownership for writes.
     */
    match /sessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(hostId) {
        return request.auth.uid == hostId;
      }

      function isExistingOwner(hostId) {
        return isOwner(hostId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.hostId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.hostId);
      allow delete: if isExistingOwner(resource.data.hostId);
    }

    /**
     * @description Allows vocabulary cards to be created by anyone, but only updated or deleted by the creator or the session host.
     * @path /sessions/{sessionId}/vocabularyCards/{vocabularyCardId}
     * @allow (get, list) Any user can read vocabulary cards within a session.
     * @allow (create) Authenticated user creates a vocabulary card.
     * @allow (update, delete) Only the creator or the session host can update or delete the vocabulary card.
     * @deny (update, delete) User attempts to update or delete a vocabulary card they did not create and are not hosting the session for.
     * @principle Enforces document ownership for writes and allows shared access to collaborators.
     */
    match /sessions/{sessionId}/vocabularyCards/{vocabularyCardId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isCardCreator(creatorId) {
        return request.auth.uid == creatorId;
      }

      function isSessionHost(sessionId) {
        return get(/databases/$(database)/documents/sessions/$(sessionId)).data.hostId == request.auth.uid;
      }

      function isExistingCardCreator(creatorId) {
        return isCardCreator(creatorId) && resource != null;
      }

       function isExistingSessionHost(sessionId) {
        return isSessionHost(sessionId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid && request.resource.data.sessionId == sessionId;
      allow update: if (isExistingCardCreator(resource.data.creatorId) || isExistingSessionHost(resource.data.sessionId));
      allow delete: if (isExistingCardCreator(resource.data.creatorId) || isExistingSessionHost(resource.data.sessionId));
    }
  }
}